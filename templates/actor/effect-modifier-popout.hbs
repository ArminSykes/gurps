<div class='gga-popup-window'>
  <table class='modifier-list me-info'>
    <tbody>
    {{#each selfmodifiers}}
      <tr class="me-line">
        <td class="me-link" data-item-id="{{this.itemId}}">{{{this.link}}}</td>
        <td class="me-at {{{this.itemType}}}"><span>{{{this.itemName}}}</span></td>
        <td class="me-tag {{{this.tag}}}">
          {{#each tags}}
              <span>{{this}}</span>
          {{/each}}
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
  {{#if targetmodifiers}}
    <div class='heading' style='border: none;'>{{i18n 'GURPS.targetedModifiers'}}</div>
    <ul class='modifier-list'>
      {{#each targetmodifiers}}
        <li>{{{this}}}</li>
      {{/each}}
    </ul>
  {{/if}}
  {{#each targets}}
    <div class='heading' style='color: orange; border-top: 1px solid dimgrey; border-bottom: none;'>{{i18n
        'GURPS.targetModifiers'
        'Target:'
      }}&ensp;{{name}}</div>
    <ul class='modifier-list'>
      {{#each targetmodifiers}}
        <li>{{{this}}}</li>
      {{/each}}
    </ul>
  {{/each}}
</div>