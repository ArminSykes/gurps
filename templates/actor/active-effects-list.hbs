<form class='{{cssClass}}' autocomplete='off'>
  <div class='active-effects-list' style='position: relative;'>
    <div class='gga-effects-list table'>
      <div class='label'>{{i18n 'GURPS.effectsEffect'}}</div>
      <div class='label'>?</div>
      <div><a id='template-add' class='effect-control button icon' data-action='create'><i class='fas fa-plus'></i></a>
      </div>
      {{#each effects}}
        <div style='display: inline-flex; flex-flow: row nowrap;'>
          <img
            class='effect-icon'
            src='{{data.icon}}'
            data-edit='icon'
            style='width: 2em; height: 2em; border: none; align-self: center; margin-right: 3px;'
          />
          <input
            name='effect-name'
            class='gcs-input clickable effect-control'
            data-effect-id='{{id}}'
            data-action='edit'
            type='text'
            readonly
            value='{{data.label}}'
          />
        </div>
        <input
          class='effect-control'
          data-action='disable'
          data-effect-id='{{id}}'
          type='checkbox'
          name='disabled'
          value='{{not data.disabled}}'
          {{checked (not data.disabled)}}
        />
        <div class='vertical-center'>
          <a
            class='effect-control'
            data-effect-id='{{id}}'
            data-action='delete'
            title='{{i18n "GURPS.delete"}}'
            style='padding: 6px 20px 0 10px;'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      {{/each}}
    </div>
  </div>
</form>