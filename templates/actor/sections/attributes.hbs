<div id='attributes' style='display: flex; flex-flow: column;'>
  <div id='basic-attributes' class='fieldblock3'>
    <div class='header' style='grid-column: 1 / 4'>{{i18n 'GURPS.primaryAttributes'}}</div>
    <div class='points'>[{{system.attributes.ST.points}}]</div>
    <div class='field rollable' data-path='attributes.ST.value' data-otf='ST'>
      {{system.attributes.ST.value}}
    </div>
    <div class='label'>{{i18n 'GURPS.strength'}} ({{i18n 'GURPS.ST'}})</div>
    <div class='points'>[{{system.attributes.DX.points}}]</div>
    <div class='field rollable' data-path='attributes.DX.value' data-otf='DX'>
      {{system.attributes.DX.value}}
    </div>
    <div class='label'>{{i18n 'GURPS.dexterity'}} ({{i18n 'GURPS.DX'}})</div>
    <div class='points'>[{{system.attributes.IQ.points}}]</div>
    <div class='field rollable' data-path='attributes.IQ.value' data-otf='IQ'>
      {{system.attributes.IQ.value}}
    </div>
    <div class='label'>{{i18n 'GURPS.intelligence'}} ({{i18n 'GURPS.IQ'}})</div>
    <div class='points'>[{{system.attributes.HT.points}}]</div>
    <div class='field rollable' data-path='attributes.HT.value' data-otf='HT'>
      {{system.attributes.HT.value}}
    </div>
    <div class='label'>{{i18n 'GURPS.health'}} ({{i18n 'GURPS.HT'}})</div>
    {{#if useQN}}
      <div class='points'>[{{system.attributes.QN.points}}]</div>
      <div class='field rollable' data-path='attributes.QN.value' data-otf='QN'>
        {{system.attributes.QN.value}}
      </div>
      <div class='label'>{{i18n 'GURPS.health'}} ({{i18n 'GURPS.QN'}})</div>
    {{/if}}
    <hr />
    <div class='points'></div>
    <div class='field noedit rollable' data-damage data-otf='{{system.thrust}} dmg'>{{system.thrust}}</div>
    <div class='label'>{{i18n 'GURPS.thrust'}}</div>
    <div class='points'></div>
    <div class='field noedit rollable' data-damage data-otf='{{system.swing}} dmg'>{{system.swing}}</div>
    <div class='label'>{{i18n 'GURPS.swing'}}</div>
    <div class='points'>[{{system.basicspeed.points}}]</div>
    <div class='field'>{{system.basicspeed.value}}</div>
    <div class='label'>{{i18n 'GURPS.basicspeed'}}</div>
    <div class='points'>[{{system.basicmove.points}}]</div>
    <div class='field'>{{system.basicmove.value}}</div>
    <div class='label'>{{i18n 'GURPS.basicmove'}}</div>
  </div>
  <div id='secondary-attrs' class='fieldblock3' style='border-top: 1px solid black;'>
    <div class='header' style='grid-column: 1 / 4'>{{i18n 'GURPS.secondaryAttributes'}}</div>
    <div class='points'>[{{system.attributes.WILL.points}}]</div>
    <div class='field rollable' data-path='attributes.WILL.value' data-otf='WILL'>
      {{system.attributes.WILL.value}}
    </div>
    <div class='label'>{{i18n 'GURPS.will'}}</div>
    <div class='points'></div>
    <div class='field noedit rollable' data-path='frightcheck' data-otf='Fright Check'>
      {{system.frightcheck}}
    </div>
    <div class='label'>{{i18n 'GURPS.frightcheck'}}</div>
    <hr />
    <div class='points'>[{{system.attributes.PER.points}}]</div>
    <div class='field rollable' data-path='attributes.PER.value' data-otf='PER'>
      {{system.attributes.PER.value}}
    </div>
    <div class='label'>{{i18n 'GURPS.perception'}} ({{i18n 'GURPS.PER'}})</div>
    <div class='points'></div>
    <div class='field noedit rollable' data-path='vision' data-otf='Vision'>{{system.vision}}</div>
    <div class='label'>{{i18n 'GURPS.vision'}}</div>
    <div class='points'></div>
    <div class='field noedit rollable' data-path='hearing' data-otf='Hearing'>{{system.hearing}}</div>
    <div class='label'>{{i18n 'GURPS.hearing'}}</div>
    <div class='points'></div>
    <div class='field noedit rollable' data-path='tastesmell' data-otf='Taste Smell'>{{system.tastesmell}}
    </div>
    <div class='label'>{{i18n 'GURPS.tastesmell'}}</div>
    <div class='points'></div>
    <div class='field noedit rollable' data-path='touch' data-otf='Touch'>{{system.touch}}</div>
    <div class='label'>{{i18n 'GURPS.touch'}}</div>
  </div>
</div>