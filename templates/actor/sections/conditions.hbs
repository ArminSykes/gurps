<div id='condition'>
  <div class='header'>{{i18n 'GURPS.conditions'}}</div>
  <div class='fieldblock'>
    <div class='label'>{{i18n 'GURPS.maneuver'}}:</div>
    <div class='field' style='border: none;'>
      <select id='maneuver' name='data.conditions.maneuver' style='font-size: 90%; max-width: 14em;' {{disabled (or isEditing (not (inCombat this)))}}>
        <option value='undefined' {{select-if ../data.conditions.maneuver 'undefined'}}>
          {{i18n "GURPS.none"}}
        </option>
        {{#each (listAllManeuvers) as |this key|}}
          <option value='{{key}}' {{select-if ../data.conditions.maneuver key}}>
            {{i18n this.label}}
          </option>
        {{/each}}
      </select>
    </div>
    <div class='label'>{{i18n 'GURPS.posture' 'Posture'}}:</div>
    <div class='field' name='data.conditions.posture' style="border: none;">
      <select id='posture' name='data.conditions.posture' style='font-size: 90%;' {{disabled isEditing}}>
        <option value='standing' {{select-if ../data.conditions.posture 'standing'}}>{{i18n 'GURPS.STATUSStanding'}}</option>
        {{#each (listAllPostures) as |this key|}}
          <option value= '{{key}}' {{select-if ../data.conditions.posture key}}>
            {{i18n this.label}}
          </option>
        {{/each}}
      </select>
    </div>
    <div class='label'>{{i18n 'GURPS.combatMove' 'Combat Move'}}:</div>
    <div class='field' name='data.conditions.combatmove'><span>{{data.conditions.move}}</span></div>
    <div class='label'></div>
    <div class='field' style='border: none;'>
      <button id='open-modifier-popup' {{disabled (empty data.conditions.self.modifiers)}}><i class="fas fa-external-link-alt"></i>Effect Modifiers</button>
    </div>
  </div>
</div>