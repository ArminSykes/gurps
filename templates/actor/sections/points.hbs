<div id='points'>
  <div class='header'>{{system.totalpoints.total}} {{i18n 'GURPS.points'}}</div>
  <div class='fieldblock'>
    {{#if isEditing}}
      <div class='label'>{{i18n 'GURPS.Total'}}</div>
      <div class='field noedit'><input
          name='system.totalpoints.total'
          class='gcs-input'
          type='number'
          value='{{system.totalpoints.total}}'
        /></div>
    {{/if}}
    <div class='label'>{{i18n 'GURPS.unspent'}}</div>
    <div class='field noedit'><input
        name='system.totalpoints.unspent'
        class='gcs-input'
        type='number'
        value='{{system.totalpoints.unspent}}'
        {{disabled (not isEditing)}}
      /></div>
    <div class='label'>{{i18n 'GURPS.race'}}</div>
    <div class='field noedit'><input
        name='system.totalpoints.race'
        class='gcs-input'
        type='number'
        value='{{system.totalpoints.race}}'
        {{disabled (not isEditing)}}
      /></div>
    <div class='label'>{{i18n 'GURPS.attributes'}}</div>
    <div class='field noedit'><input
        name='system.totalpoints.attributes'
        class='gcs-input'
        type='number'
        value='{{system.totalpoints.attributes}}'
        {{disabled (not isEditing)}}
      /></div>
    <div class='label'>{{i18n 'GURPS.advantages'}}</div>
    <div class='field noedit'><input
        name='system.totalpoints.ads'
        class='gcs-input'
        type='number'
        value='{{system.totalpoints.ads}}'
        {{disabled (not isEditing)}}
      /></div>
    <div class='label'>{{i18n 'GURPS.disadvantages'}}</div>
    <div class='field noedit'><input
        name='system.totalpoints.disads'
        class='gcs-input'
        type='number'
        value='{{system.totalpoints.disads}}'
        {{disabled (not isEditing)}}
      /></div>
    <div class='label'>{{i18n 'GURPS.quirks'}}</div>
    <div class='field noedit'><input
        name='system.totalpoints.quirks'
        class='gcs-input'
        type='number'
        value='{{system.totalpoints.quirks}}'
        {{disabled (not isEditing)}}
      /></div>
    <div class='label'>{{i18n 'GURPS.skills'}}</div>
    <div class='field noedit'><input
        name='system.totalpoints.skills'
        class='gcs-input'
        type='number'
        value='{{system.totalpoints.skills}}'
        {{disabled (not isEditing)}}
      /></div>
    <div class='label'>{{i18n 'GURPS.spells'}}</div>
    <div class='field noedit'><input
        name='system.totalpoints.spells'
        class='gcs-input'
        type='number'
        value='{{system.totalpoints.spells}}'
        {{disabled (not isEditing)}}
      /></div>
  </div>
</div>